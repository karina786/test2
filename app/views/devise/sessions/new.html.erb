<br><br>
<div class="indent">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class:"text_color" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Enter your Email" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class:"text_color" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder: "Enter your Password" %>
    </div>
    <br>
    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <br>
    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-outline-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
