<br><br>
<div class="indent">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class:"text_color"  %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Enter ypur Email" %>
    </div><br>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:"btn btn-primary" %><br><br>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>